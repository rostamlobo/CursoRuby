<h1>listing all todos</h1>

<p>
    <%= link_to "Create a Person", new_todo_path %>
</p>


<table>
    <tr>
        <th>Name</th>
        <th>Description </th>
    </tr>
    <%@todos.each do |todo|%>
        <tr>
            <td><%= todo.name %></td>
            <td><%= todo.description %></td>
            <td><%= link_to "Edit Person", edit_todo_path(todo) %></td>
            <td><%= link_to "Show Person", todo_path(todo) %></td>
        </tr>
    <% end %>

</table>
